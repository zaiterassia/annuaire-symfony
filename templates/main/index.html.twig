{% extends '_partials/main.html.twig' %}

{% block title %}Acceuil{% endblock %}
{% block subtitle %}Acceuil{% endblock %}

{% block content %}
<section class="dashboard-counts section-padding">
  <div class="container-fluid">
    <div class="row">
      <!-- Count item widget-->
      <div class="col-xl-3 col-md-3 col-6">
        <div class="wrapper count-title d-flex">
          <div class="icon"><i class="icon-user"></i></div>
          <div class="name"><strong class="text-uppercase">Membres</strong><span>utilisateur de l'annuaire</span>
            <div class="count-number">
              {{ totalUsers }}
            </div>
          </div>
        </div>
      </div>
      <!-- Count item widget-->
      <div class="col-xl-3 col-md-3 col-6">
        <div class="wrapper count-title d-flex">
          <div class="icon"><i class="icon-website"></i></div>
          <div class="name"><strong class="text-uppercase">Sites référencés</strong><span>dans l'annuaire</span>
            <div class="count-number">
             {{ totalSites }}
            </div>
          </div>
        </div>
      </div>
      <!-- Count item widget-->
      <div class="col-xl-3 col-md-3 col-6">
        <div class="wrapper count-title d-flex">
          <div class="icon"><i class="icon-page"></i></div>
          <div class="name"><strong class="text-uppercase">Annuaires</strong><span>annaires de référencement</span>
            <div class="count-number">
             {{ totalAnnuaries }}                   
            </div>
          </div>
        </div>
      </div>
      <!-- Count item widget-->
      <div class="col-xl-3 col-md-3 col-6">
        <div class="wrapper count-title d-flex">
          <div class="icon"><i class="icon-presentation"></i></div>
          <div class="name"><strong class="text-uppercase">Référencement</strong><span>Demande de Référencement</span>
            <div class="count-number">
             {{ totalSeos }}                   
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="statistics">
  <div class="container-fluid">
    <div class="row d-flex">
      <div class="col-lg-4">
        <div class="card income text-center">
          <div class="icon"><i class="icon-line-chart"></i></div>
          <div class="number">{{ accepted  }}</div><strong class="text-primary">référencement accepté</strong>
          <p>{{ accepted  }} référencement de site ont été accepté dans les annuaires.</p>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card data-usage">
          <h2 class="display h4">demande en attente</h2>
          <div class="row d-flex align-items-center">
            <div class="col-sm-6">
              <div id="progress-circle" data-rate = {{ waited == 0 ? 0 : waited /totalSeos * 100  }} class="d-flex align-items-center justify-content-center"></div>
            </div>
            <div class="col-sm-6"><strong class="text-primary">{{ waited  }}</strong><span>Demande en cours</span></div>
          </div>
          <a href="{{ path('app_seo_index') }}" style="color: black">Visualisez la liste pour plus de détails.</a>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card user-activity">
          <h2 class="display h4">Activité utilisateurs</h2>
          <div class="number">{{ totalUsers }}</div>
          <h3 class="h4 display">utilisateurs</h3>
          <div class="progress">
            <div role="progressbar" style="width: {{ waited == 0 ? 0 : (updated/waited)*100  }}%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" class="progress-bar progress-bar bg-primary"></div>
          </div>
          <div class="page-statistics d-flex justify-content-between">
            <div class="page-statistics-left">
            </div>
            <div class="page-statistics-right"><span>Nouvelles mise-à-jour</span><strong>{{ updated }}</strong>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
