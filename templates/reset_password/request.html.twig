
{% form_theme requestForm with ['foundation_5_layout.html.twig'] only %}
{% extends 'adminbase.html.twig' %}

{% block title %}Reset password{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
    <!-- Google fonts - Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
{% endblock %}

{% block body %}
<div class="page login-page">
  <div class="container">
    <div class="form-outer text-center d-flex align-items-center">
      <div class="form-inner">
        <div class="logo text-uppercase"><strong class="text-primary"> Mot de passe oublié</strong></div>
        <p>Entrez votre identifiant ou votre adresse E-mail, nous vous enverrons un lien de réinitilaisation de mot de passe.Si vous ne voyez pas notre e-mail, regardez dans votre dossier Spam.</p>
        
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger alert-dismissible" role="alert">{{ flash_error }}</div>
        {% endfor %}
        {{ form_start(requestForm) }}
        <div class="form-group-material">
        {{ form_widget(requestForm.email) }}
        {{ form_label(requestForm.email) }}
        </div>
        <button class="btn btn-primary">Reset password</button>
        {{ form_end(requestForm) }}
        <a href="{{ path('app_login') }}" class="forgot-pass">retour page de connexion</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block javascripts %}
    <!-- JavaScript files-->
    <script src="{{ asset('vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('vendor/jquery-validation/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js') }}"></script>
    <!-- Main File-->
    <script src="{{ asset('js/front.js') }}"></script>
    {% block customjs %} {% endblock %}

{% endblock %}



