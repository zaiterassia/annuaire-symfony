
{% form_theme resetForm with ['foundation_5_layout.html.twig'] only %}
{% extends 'adminbase.html.twig' %}

{% block title %}r√©initialiser le mot de passe{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
    <!-- Google fonts - Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
{% endblock %}

{% block body %}
<div class="page login-page">
  <div class="container">
    <div class="form-outer text-center d-flex align-items-center">
      <div class="form-inner">
        <div class="logo text-uppercase"><strong class="text-primary">nouveau mot de passe</strong></div>
        <p>Entrez un nouveau mot de passe.</p>
        
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger alert-dismissible" role="alert">{{ flash_error }}</div>
        {% endfor %}
        {{ form_start(resetForm) }}
        <div class="form-group-material">
            {{ form_widget(resetForm.plainPassword.first) }}
            {{ form_label(resetForm.plainPassword.first) }}
        </div>
        <div class="form-group-material">
            {{ form_widget(resetForm.plainPassword.second) }}
            {{ form_label(resetForm.plainPassword.second) }}
        </div>

        <button class="btn btn-primary">initialiser le mot de passe</button>
        {{ form_end(resetForm) }}
        <a href="{{ path('app_login') }}" class="forgot-pass">Retour page de connexion</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block javascripts %}
    <!-- JavaScript files-->
    <script src="{{ asset('vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('vendor/jquery-validation/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js') }}"></script>
    <!-- Main File-->
    <script src="{{ asset('js/front.js') }}"></script>
    {% block customjs %} {% endblock %}

{% endblock %}




