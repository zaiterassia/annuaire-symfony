{% extends 'base.html.twig' %}

{% block title %}Site{% endblock %}

{% block body %}
    <h1>Site</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ site.url }}</td>
            </tr>
            <tr>
                <th>EditDate</th>
                <td>{{ site.editDate ? site.editDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ site.description }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ site.keywords }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_site_index') }}">back to list</a>

    <a href="{{ path('app_site_edit', {'id': site.id}) }}">edit</a>

    {{ include('site/_delete_form.html.twig') }}
{% endblock %}
