<form method="post" action="{{ path('app_site_delete', {'id': site.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ site.id) }}">
    <button class="btn btn-outline-danger btn-delete-show-site">Delete <img src="{{ asset('img/delete.svg') }}" class="img-footer-show-delete"></button>
</form>
